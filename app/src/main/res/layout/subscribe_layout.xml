<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">

    <RelativeLayout
        android:id="@+id/screen_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/app"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/delaroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Delaroy Studios"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/app"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/subDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on the Subscribe button to choose a preferred plan"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_above="@+id/rasbita_subscribe"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/rasbita_subscribe"
            android:src="@drawable/subscribe"
            android:onClick="onSubscribeButtonClicked"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>